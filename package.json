{
	"name": "sorbet-lsp",
	"description": "Sorbet language server",
	"author": "Tan Huynh",
	"publisher": "danhuynhdev",
	"license": "MIT",
	"version": "0.1.3",
	"repository": {
		"type": "git",
		"url": "https://github.com/danhuynhdev/sorbet-lsp"
	},
	"categories": [],
	"keywords": [
		"sorbet",
		"ruby",
		"lsp"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:ruby"
	],
	"main": "./out/extension",
	"scripts": {
		"update-vscode": "node ./node_modules/vscode/bin/install",
