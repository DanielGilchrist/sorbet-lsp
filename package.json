		"vscode:prepublish": "npm run update-vscode && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"tslint": "^5.16.0",
		"vscode": "^1.43.0",
		"@types/vscode": "^1.43.0",
		"typescript": "^3.6.4"
	},
	"dependencies": {
		"vscode-languageclient": "^5.2.1",
		"cross-spawn": "^7.0.1",
		"shell-escape": "^0.2.0"
	}
}
